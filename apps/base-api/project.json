{
  "name": "base-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/base-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "base-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "base-api:build:development"
        },
        "production": {
          "buildTarget": "base-api:build:production"
        }
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "main": "apps/base-api/src/main.ts",
        "outputPath": "dist/apps/base-api",
        "tsConfig": "apps/base-api/tsconfig.app.json",
        "webpackConfig": "apps/base-api/webpack.config.js",
        "watch": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "dependsOn": ["build"],
      "options": {
        "displayName": "base-api",
        "preset": "../../jest.preset.js",
        "testEnvironment": "node",
        "transform": {
          "^.+\\.[tj]s$": ["ts-jest", { "tsconfig": "<rootDir>/tsconfig.spec.json" }]
        },
        "moduleFileExtensions": ["ts", "js", "html"],
        "coverageDirectory": "../../coverage/apps/base-api",
        "collectCoverage": true,
        "collectCoverageFrom": ["<rootDir>/src/**/*.[tj]s"],
        "coverageReporters": ["lcov"],
        "coveragePathIgnorePatterns": [
          "<rootDir>/src/guards",
          "<rootDir>/src/.*.repository.*",
          "<rootDir>/src/decorators"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/base-api/**/*.ts"
        ]
      }
    }
  }
}